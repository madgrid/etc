;  ) /            .-/
; (_/            (_/

[colors]
bg = ${xrdb:color0}
fg = ${xrdb:color7}

red = ${xrdb:color1}
grn = ${xrdb:color2}
ylw = ${xrdb:color3}
blu = ${xrdb:color4}
mag = ${xrdb:color5}
cyn = ${xrdb:color6}
wht = ${xrdb:color7}
bblk = ${xrdb:color8}

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

[bar/base]
monitor = ${env:MONITOR:eDP1}
width    = 100%
height   = 20
offset-x = 0
offset-y = 0

background = ${colors.bg}
foreground = ${colors.fg}
border-color = ${colors.bg}

font-0 = lemon:size=8;1
font-1 = scientifica:size=8:antialias=true;1
font-2 = Siji:size=9;2

modules-left   = time cpu ram battery title
modules-center =
modules-right  = nowplaying essid volume backlight date

border-size = 6
padding-left        = 0
padding-right       = 0
module-margin-left  = 1
module-margin-right = 0

bottom = true

[module/network]
type          = internal/network
interface     = wlp6s0
ping-interval = 30

[module/date]
type                     = internal/date
interval                 = 30
date                     = "%A %d, %B"
; format-prefix            = 
; format-prefix-foreground = ${colors.grn}
format-background = ${colors.grn}
format-foreground = ${colors.bg}
format-padding           = 2

[module/time]
type                     = internal/date
interval                 = 30
date                     = "%I:%M %p"
; format-prefix            = 
; format-prefix-foreground = ${colors.grn}
format-background = ${colors.blu}
format-foreground = ${colors.bg}
format-padding           = 2

[module/title]
type = internal/xwindow
label-maxlen = 50
format-padding = 2

[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = false

format = <label>
format-prefix = 
; format-prefix-foreground = ${colors.ylw}
format-background = ${colors.ylw}
format-foreground = ${colors.bg}
format-padding    = 2

label=%percentage%%

[module/volume]
type = internal/volume

format-volume = <label-volume>
format-muted = <label-muted>
format-volume-background = ${colors.mag}
format-volume-foreground = ${colors.bg}
format-muted-background = ${colors.mag}
format-muted-foreground = ${colors.bg}

label-muted             = muted

format-volume-prefix = " "
format-muted-prefix  = " "

format-volume-padding = 2
format-muted-padding    = 2

[module/nowplaying]
type              = custom/script
interval          = 5
format-text       = <label>
label-maxlen = 50
format-padding = 2
exec              = ~/bin/nowplaying
format-background = ${colors.grn}
format-foreground = ${colors.bg}

[module/cpu]
type                     = internal/cpu
label                    = " %percentage%%"
format-padding           = 2
format-prefix            = 

; format-prefix-foreground = ${colors.grn}
format-background = ${colors.grn}
format-foreground = ${colors.bg}

[module/ram]
type     = internal/memory
interval = 3

format           = <label>
format-padding   = 2
label            = " %percentage_used%%"

format-prefix = 
; format-prefix-foreground = ${colors.blu}
format-background = ${colors.blu}
format-foreground = ${colors.bg}

[module/essid]
inherit = module/network

format-connected = <label-connected>
format-disconnected = <label-disconnected>

format-connected-prefix     = ""
format-disconnected-prefix  = ""

format-connected-background = ${colors.cyn}
format-disconnected-background = ${colors.cyn}
format-connected-foreground = ${colors.bg}
format-disconnected-foreground = ${colors.bg}
label-connected             = " %essid%"
label-disconnected          = " disconnected"

format-connected-padding     = 2
format-disconnected-padding  = 2
; format-connected-prefix-foreground     = ${colors.cyn}
; format-disconnected-prefix-foreground  = ${colors.cyn}

[module/battery]
type          = internal/battery
full-at       = 98
battery       = BAT0
adapter       = AC0
poll-interval = 5

format-charging-prefix      = ""
format-discharging-prefix   = ""
format-full-prefix          = ""

label-charging      = " %percentage%% "
label-discharging   = " %percentage%% "
label-full          = " %percentage%% "

format-charging-padding = 1
format-discharging-padding = 1
format-full-padding    = 1

format-charging-background      = ${colors.red}
format-discharging-background   = ${colors.red}
format-full-background          = ${colors.red}
format-charging-foreground      = ${colors.bg}
format-discharging-foreground   = ${colors.bg}
format-full-foreground          = ${colors.bg}

; format-charging-prefix-foreground = ${colors.red}
; format-discharging-prefix-foreground = ${colors.red}
; format-full-prefix-foreground    = ${colors.red}
