;     _/__ / ___//      (/_ _   __
;     /     (_)(/_ (_/_/_) (_(_/ (_
;  ) /            .-/
; (_/            (_/

[colors]
bg = ${xrdb:color0}
fg = ${xrdb:color7}

red = ${xrdb:color1}
grn = ${xrdb:color2}
ylw = ${xrdb:color3}
blu = ${xrdb:color4}
mag = ${xrdb:color5}
cyn = ${xrdb:color6}
wht = ${xrdb:color7}
bblk = ${xrdb:color8}

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

[bar/base]
monitor = ${env:MONITOR:eDP1}
width    = 100%
height   = 32
offset-x = 0
offset-y = 0

background = ${colors.bg}
foreground = ${colors.fg}
border-color = ${colors.bg}

font-0 = lemon:size=8;1
font-1 = scientifica:size=8:antialias=true;1
font-2 = Siji:size=9;2

modules-left   = cpu ram battery title
modules-center =
modules-right  = nowplaying essid volume backlight date

border-size = 0
padding-left        = 2
padding-right       = 2
module-margin-left  = 2
module-margin-right = 0

bottom = true

[module/network]
type          = internal/network
interface     = wlp6s0
ping-interval = 30

[module/date]
type                     = internal/date
interval                 = 30
date                     = "|  %A %d %b %I:%M "
; format-prefix            = 
; format-prefix-foreground = ${colors.grn}
format-padding           = 0

[module/title]
type = internal/xwindow
label-maxlen = 50
format-padding = 2

[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = false

format = <label>
format-prefix = 
format-prefix-foreground = ${colors.ylw}
format-padding    = 1

label=%percentage%%

[module/volume]
type = internal/volume

format-volume = <label-volume>
format-muted = <label-muted>

label-muted             = muted

format-volume-prefix = " "
format-muted-prefix  = " "

format-volume-padding = 1
format-muted-padding    = 1

format-volume-prefix-foreground = ${colors.mag}
format-muted-prefix-foreground  = ${colors.mag}

[module/nowplaying]
type              = custom/script
interval          = 5
format-text       = <label>
label-maxlen = 50
format-padding = 1
exec              = ~/bin/nowplaying

[module/cpu]
type                     = internal/cpu
label                    = " %percentage%%"
format-padding           = 1
format-prefix            = 

format-prefix-foreground = ${colors.grn}

[module/ram]
type     = internal/memory
interval = 3

format           = <label>
format-padding   = 1
label            = " %percentage_used%%"

format-prefix = 
format-prefix-foreground = ${colors.blu}

[module/essid]
inherit = module/network

format-connected = <label-connected>
format-disconnected = <label-disconnected>

format-connected-prefix     = ""
format-disconnected-prefix  = ""

label-connected             = " %essid%"
label-disconnected          = " disconnected"

format-connected-padding     = 1
format-disconnected-padding  = 1
format-connected-prefix-foreground     = ${colors.cyn}
format-disconnected-prefix-foreground  = ${colors.cyn}

[module/battery]
type          = internal/battery
full-at       = 98
battery       = BAT0
adapter       = AC0
poll-interval = 5

format-charging-prefix      = ""
format-discharging-prefix   = ""
format-full-prefix          = ""

label-charging      = " %percentage%% "
label-discharging   = " %percentage%% "
label-full          = " %percentage%% "

format-charging-padding = 1
format-discharging-padding = 1
format-full-padding    = 1

format-charging-prefix-foreground = ${colors.red}
format-discharging-prefix-foreground = ${colors.red}
format-full-prefix-foreground    = ${colors.red}
