;  ) /            .-/
; (_/            (_/

[colors]
bg = ${xrdb:color0}
fg = ${xrdb:color7}


blk = ${xrdb:color0}
red = ${xrdb:color1}
grn = ${xrdb:color2}
ylw = ${xrdb:color3}
blu = ${xrdb:color4}
mag = ${xrdb:color5}
cyn = ${xrdb:color6}
wht = ${xrdb:color7}

bblk = ${xrdb:color8}
bred = ${xrdb:color9}
bgrn = ${xrdb:color10}
bylw = ${xrdb:color11}
bblu = ${xrdb:color12}
bmag = ${xrdb:color13}
bcyn = ${xrdb:color14}
bwht = ${xrdb:color15}

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

[bar/base]
monitor = ${env:MONITOR:eDP1}
width    = 100%
height   = 32
offset-x = 0
offset-y = 0

background = ${colors.blk}
foreground = ${colors.fg}
border-color = ${colors.blk}

font-0 = lemon:size=8;1
font-1 = scientifica:size=8:antialias=true;1
font-2 = Siji:size=9;2

modules-left   = bspwm 2bws cpu ram battery title
modules-center =
modules-right  = npstatus essid volume backlight date

border-size = 0
padding-left        = 2
padding-right       = 2
module-margin-left  = 2
module-margin-right = 0

bottom = true

[module/network]
type          = internal/network
interface     = wlp6s0
ping-interval = 3

[module/date]
type                     = internal/date
interval                 = 1
date                     = "|  %A %d %b %I:%M "
; format-prefix            = 
; format-prefix-foreground = ${colors.grn}
format-padding           = 0

[module/title]
type = internal/xwindow
label-maxlen = 50
format-padding = 2

[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = false

format = <label>
format-prefix = 
format-prefix-foreground = ${colors.ylw}
format-padding    = 1

label=%percentage%%

[module/volume]
type = internal/volume

format-volume = <label-volume>
format-muted = <label-muted>

label-muted             = muted

format-volume-prefix = " "
format-muted-prefix  = " "

format-volume-padding = 1
format-muted-padding    = 1

format-volume-prefix-foreground = ${colors.mag}
format-muted-prefix-foreground  = ${colors.mag}

[module/npstatus]
type              = custom/script
interval          = 0.1
format-text       = <label>
label-maxlen = 50
format-padding = 1
exec              = npstatus

[module/cpu]
type                     = internal/cpu
label                    = " %percentage%%"
format-padding           = 1
format-prefix            = 

format-prefix-foreground = ${colors.grn}

[module/ram]
type     = internal/memory
interval = 3

format           = <label>
format-padding   = 1
label            = " %percentage_used%%"

format-prefix = 
format-prefix-foreground = ${colors.blu}


[module/2bws]
type              = custom/script
exec              = ~/bin/wsi
interval          = 0.01
format-padding    = 1
scroll-up         = exec ~/bin/wss -f
scroll-down       = exec ~/bin/wss -r

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
inline-mode = false
enable-click = true
enable-scroll = false
reverse-scroll = false
fuzzy-match = false

format-background = ${colors.bg}
format-padding = 1

label-focused-background    = ${colors.grn}
label-occupied-background   = ${colors.blu}
label-urgent-background     = ${colors.red}
label-empty-background      = ${colors.wht}
label-focused-foreground    = ${colors.bg}
label-occupied-foreground   = ${colors.bg}
label-urgent-foreground     = ${colors.bg}
label-empty-foreground      = ${colors.bg}

label-focused-padding    = 1
label-occupied-padding    = 1
label-urgent-padding    = 1
label-empty-padding    = 1

[module/essid]
inherit = module/network

format-connected = <label-connected>
format-disconnected = <label-disconnected>

format-connected-prefix     = ""
format-disconnected-prefix  = ""

label-connected             = " %essid%"
label-disconnected          = " disconnected"

format-connected-padding     = 1
format-disconnected-padding  = 1
format-connected-prefix-foreground     = ${colors.cyn}
format-disconnected-prefix-foreground  = ${colors.cyn}

[module/battery]
type          = internal/battery
full-at       = 98
battery       = BAT0
adapter       = AC0
poll-interval = 5

format-charging-prefix      = ""
format-discharging-prefix   = ""
format-full-prefix          = ""

label-charging      = " %percentage%% "
label-discharging   = " %percentage%% "
label-full          = " %percentage%% "

format-charging-padding = 1
format-discharging-padding = 1
format-full-padding    = 1

format-charging-prefix-foreground = ${colors.red}
format-discharging-prefix-foreground = ${colors.red}
format-full-prefix-foreground    = ${colors.red}
